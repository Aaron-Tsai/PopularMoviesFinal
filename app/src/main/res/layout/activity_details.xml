<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.popularmovies.DetailsActivity"
    android:background="@color/appBackground">

    <LinearLayout
        android:id="@+id/movie_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/details_activity_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/details_activity_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/constant_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_overview"
            android:textSize="35sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/details_activity_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/constant_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_release_date"
            android:textSize="35sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/details_activity_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/constant_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_vote_average"
            android:textSize="35sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/details_activity_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"/>

        <!--<ProgressBar-->
        <!--android:id="@+id/movie_details_loading"-->
        <!--android:layout_width="42dp"-->
        <!--android:layout_height="42dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:padding="16dp"-->
        <!--android:visibility="invisible" />-->

    </LinearLayout>

</ScrollView>
